# Dofus Retro Price Tracker - Environment Configuration Template
# Wave 2 Infrastructure
#
# Copy this file to .env and fill in the values for your environment
# DO NOT commit .env to version control!

# =============================================================================
# Spring Profile
# =============================================================================
SPRING_PROFILES_ACTIVE=dev  # dev, prod, test

# =============================================================================
# Application Configuration
# =============================================================================
APP_PORT=8080
APP_VERSION=latest

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=dofus_retro_db
POSTGRES_USER=dofus
POSTGRES_PASSWORD=change_me_in_production  # REQUIRED: Set a strong password in production!
POSTGRES_PORT=5432

# Database Connection (for application)
DATABASE_URL=jdbc:postgresql://postgres:5432/dofus_retro_db
DB_USERNAME=dofus
DB_PASSWORD=change_me_in_production  # Should match POSTGRES_PASSWORD

# Connection Pool Settings
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=10

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_ENABLED=true
CACHE_TYPE=caffeine  # caffeine or redis
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Redis Configuration (optional, only if CACHE_TYPE=redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=  # Leave empty for no password
REDIS_DATABASE=0
REDIS_TIMEOUT=5000

# =============================================================================
# Packet Capture Configuration
# =============================================================================
PACKET_CAPTURE_ENABLED=false  # Set to true to enable packet capture
NETWORK_INTERFACE=eth0
DOFUS_PORT=5555
SNAP_LEN=65536
CAPTURE_TIMEOUT=1000
QUEUE_CAPACITY=1000
QUEUE_TIMEOUT=100
PROMISCUOUS_MODE=false

# =============================================================================
# GUI Automation Configuration
# =============================================================================
GUI_AUTOMATION_ENABLED=false  # Set to true to enable GUI automation
GUI_SCREENSHOT_INTERVAL=5000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_FILE=/app/logs/application.log

# =============================================================================
# pgAdmin Configuration (optional)
# =============================================================================
PGADMIN_EMAIL=admin@dofusretro.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# =============================================================================
# Docker Configuration
# =============================================================================
# Uncomment to override default resource limits
# See docker-compose.yml for default values

# =============================================================================
# Security (Production)
# =============================================================================
# Add any additional security-related environment variables here
# Example: API keys, JWT secrets, etc.
